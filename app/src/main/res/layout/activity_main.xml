<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/colorPrimary"
    tools:context="com.ctproject.pocketyasiin.MainActivity">

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="0.4"
        />

    <ImageView
        android:id="@+id/gambarLogo"
        android:layout_width="180dp"
        android:layout_height="110dp"
        android:src="@drawable/logo" />

    <Button
        android:id="@+id/tombolYasin"
        android:layout_margin="5dp"
        android:background="@drawable/action_button"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_baca_baru"
        android:drawableStart="@drawable/ic_baca_baru"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:drawablePadding="10dp"
        android:textAllCaps="true"
        android:gravity="left|center_vertical"
        android:textColor="@android:color/white"
        android:text="Baca Yasin"
        android:textStyle="bold"
        style="?android:attr/borderlessButtonStyle"
        />

    <Button
        android:id="@+id/tombolTahlil"
        android:layout_margin="5dp"
        android:background="@drawable/action_button"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_baca_baru"
        android:drawableStart="@drawable/ic_baca_baru"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:drawablePadding="10dp"
        android:textAllCaps="true"
        android:gravity="left|center_vertical"
        android:textColor="@android:color/white"
        android:text="Baca Tahlil"
        android:textStyle="bold"
        style="?android:attr/borderlessButtonStyle"
        />

    <Button
        android:id="@+id/tombolAyatKursi"
        android:layout_margin="5dp"
        android:background="@drawable/action_button"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_baca_baru"
        android:drawableStart="@drawable/ic_baca_baru"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:drawablePadding="10dp"
        android:textAllCaps="true"
        android:gravity="left|center_vertical"
        android:textColor="@android:color/white"
        android:text="Baca Ayat Kursi"
        android:textStyle="bold"
        style="?android:attr/borderlessButtonStyle"
        />

    <Button
        android:id="@+id/tombolAsmaul"
        android:layout_margin="5dp"
        android:background="@drawable/action_button"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_asmaul"
        android:drawableStart="@drawable/ic_asmaul"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:drawablePadding="10dp"
        android:textAllCaps="true"
        android:gravity="left|center_vertical"
        android:textColor="@android:color/white"
        android:text="Asmaul Husna"
        android:textStyle="bold"
        style="?android:attr/borderlessButtonStyle"
        />

    <Button
        android:id="@+id/tombolPengaturan"
        android:layout_margin="5dp"
        android:background="@drawable/action_button"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_pengaturan"
        android:drawableStart="@drawable/ic_pengaturan"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:drawablePadding="10dp"
        android:textAllCaps="true"
        android:gravity="left|center_vertical"
        android:textColor="@android:color/white"
        android:text="Pengaturan"
        android:textStyle="bold"
        style="?android:attr/borderlessButtonStyle"
        />

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        />



</LinearLayout>
